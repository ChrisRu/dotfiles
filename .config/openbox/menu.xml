<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<menu id="apps-menu" label="Applications">
  <item label="URxvt">
    <action name="Execute">
	  <command>urxvtc</command>
      <startupnotify>
		<enabled>yes</enabled>
		<wmclass>URxvt</wmclass>
	  </startupnotify>
    </action>
  </item>
  <item label="Thunar">
    <action name="Execute">
      <command>thunar</command>
      <startupnotify>
        <enabled>yes</enabled>
        <wmclass>Thunar</wmclass>
      </startupnotify>
    </action>
  </item>
  <item label="Chrome">
    <action name="Execute">
      <command>google-chrome-beta</command>
      <startupnotify>
        <enabled>yes</enabled>
        <wmclass>Chrome</wmclass>
      </startupnotify>
    </action>
  </item>
  <item label="Steam">
	<action name="Execute">
      <command>steam-native</command>
      <startupnotify>
        <enabled>yes</enabled>
        <wmclass>Steam</wmclass>
      </startupnotify>
    </action>
	</item>
  <item label="Spotify">
		<action name="Execute">
      <command>spotify</command>
      <startupnotify>
        <enabled>yes</enabled>
        <wmclass>Spotify</wmclass>
      </startupnotify>
    </action>
  </item>
  <item label="Thunderbird">
	<action name="Execute">
	  <command>thunderbird</command>
	  <startupnotify>
		<enabled>yes</enabled>
		<wmclass>Thunderbird</wmclass>
	  </startupnotify>
	</action>
  </item>
</menu>

<menu id="system-menu" label="System">
  <item label="Power Off">
    <action name="Execute">
      <execute>systemctl poweroff</execute>
    </action>
  </item>
  <item label="Reboot">
    <action name="Execute">
      <execute>systemctl reboot</execute>
    </action>
  </item>
  <item label="Suspend">
    <action name="Execute">
      <execute>systemctl suspend</execute>
    </action>
  </item>
  <item label="Log Out">
    <action name="Exit">
      <prompt>yes</prompt>
    </action>
  </item>
</menu>

<menu id="root-menu" label="Openbox 3">
  <menu id="apps-menu" />
  <menu id="system-menu" />
</menu>

</openbox_menu>
